{
    "Program": {
        "prefix": "prog,program",
        "body": [
            "PROGRAM ${1:name }",
            "\t$0",
            "BEGIN",
            "\t$0",
            "END  ${1:name }"
        ],
        "description": "PDL2 Program"
    },
    "ROUTINE": {
		"prefix": "rout, routine",
		"body": [
			"ROUTINE ${1:Name}",
            "\t$0",
            "BEGIN",
            "\t$0",
			"END ${1:Name}"
		],
		"description": "PDL2 Routine"
	},
    "CONDITION": {
		"prefix": "cond, condi,condition",
		"body": [
			"CONDITION [${1:condNum}]",
			"\t$0",
			"ENDCONDITION"
		],
		"description": "PDL2 interrupt"
    },
    "TYPE": {
		"prefix": "type, record,rec",
		"body": [
            "TYPE",
            "    ${1:recordTypeName} = RECORD",
            "    ${2:varName}:${3:varType}",
            "\t$0",
			"ENDRECORD"
		],
		"description": "PDL2 RECORD/TYPE"
    },
   	//loop
    "FOR...ENDFOR": {
        "prefix": "for",
        "body": [
            "FOR ${1:counter} := ${2:start} TO ${3:end} DO",
            "\t$0",
            "ENDFOR"
        ],
        "description": "For loop"
    },
    "WHILE...ENDWHILE": {
        "prefix": "while",
        "body": [
            "WHILE ${1:condition} DO",
            "\t$0",
            "ENDWHILE"
        ],
        "description": "While loop"
    },
    //conditions statements
    "IF...ENDIF": {
        "prefix": "if",
        "body": [
            "IF ${1:condition} THEN",
            "\t$0",
            "ENDIF"
        ],
        "description": "If endif"
    },
    "IF..ELSE..ENDIF": {
        "prefix": "if",
        "body": [
            "IF ${1:condition} THEN",
            "\t$0",
            "ELSE",
            "\t$0",
            "ENDIF"
        ],
        "description": "If else endif"
    },
    "Switch statement": {
        "prefix": "test,switch, sel, select",
        "body": [
            "SELECT ${1:variable} OF",
            "CASE (${2:switch}):",
            "\t$0",
            "CASE (${3:switch}):",
            "\t$0",
            "ELSE:",
            "\t$0",
            "ENDSELECT"
        ],
        "description": "Switch/Select case statement"
    },   
    // variable declaration
    "CONST": {
        "prefix": "const",
        "body": [
            "CONST ${1:CONSTVAR} = ${2:CONSTVALUE}"
        ],
        "description": "CONSTANT VALUE"
    },
    "INTEGER": {
        "prefix": "int, integer",
        "body": [
            "VAR ${1:varName} : INTEGER"
        ],
        "description": "Integer"
    },
    "INTEGER Array": {
        "prefix": "int, integer",
        "body": [
            "VAR ${1:arrayName} : ARRAY[${2:rowNum},${3:colNum}] OF INTEGER"
        ],
        "description": "Interger array"
    },
    "ARRAY": {
        "prefix": "arr, array",
        "body": [
            "VAR ${1:arrayName} : ARRAY[${2:rowNum},${3:colNum}] OF ${4:dataType}"
        ],
        "description": "PDL2 Array of ...."
    },
    "VAR EXPORTED": {
        "prefix": "exp, exported",
        "body": [
            "VAR ${1:varName} : ${2:dataType} EXPORTED FROM ${2:progName}"
        ],
        "description": "PDL2 exoprt/import variable"
    },
    "ROUTINE EXPORTED": {
        "prefix": "exp, exported",
        "body": [
            "ROUTINE ${1:routineName} EXPORTED FROM ${2:progName}"
        ],
        "description": "PDL2 exoprt/import routine"
    },
    "IMPORT": {
        "prefix": "imp, import",
        "body": [
            "IMPORT '${1:progName}'"
        ],
        "description": "PDL2 exoprt/import routine"
    }
}
